/* pages/book/book.wxss */

.scroll-x {
    height:120rpx;
    white-space:nowrap;
    display:flex;
}

/* 隐藏scrollbar */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.view-parent {
    display:inline-block;
}

.view-item {
    width:140rpx;
    height:50rpx;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:12px;
    color:#222;
    border:2rpx solid blue;
    border-radius: 10rpx;
    margin:10px;
}
