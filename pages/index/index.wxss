.about_img {
  width: 100%;
  height: 420rpx;
}

.project{ 
  display: flex;
  align-items: center;
  line-height: 90rpx; 
  width: 690rpx;
  height: 100rpx;
  margin: auto 30rpx;
  border-bottom: 5rpx solid #C0BFC1;

}

.company_logo {
  width: 200rpx;
  height: 54rpx;
  margin-left: 15rpx;
}

.case_left {
  float: left;
  width: 48%;
  height: 400rpx;
  margin-left: 6rpx;
  margin-top: 5rpx;
}

.case_right {
  float: right;
  width: 48%;
  height: 400rpx;
  margin-right: 6rpx;
  margin-top: 5rpx;
}

.caseimg {
  width: 100%;
  height: 300rpx;
  margin-top: 5rpx;
  margin-left: 5rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}

.case_name {
  font-size: 33rpx;
  margin-left: 10rpx;
  margin-top: -10rpx;
  color:#1E9BDC;
}

.case_price {
  font-size: 25rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
}

.case_book {
  display: inline-block;
  float: right;
  font-size: 28rpx;
  text-align: center;
  line-height: 45rpx;
  margin-right:10rpx;
  width: 100rpx;
  height: 45rpx;
  background-color: #FFBB00;
  border-radius: 10rpx;
}

.scroll-x {
    height:100rpx;
    white-space:nowrap;
    display:flex;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.view-parent {
    display:inline-block;
}

.view-item {
    width:140rpx;
    height:50rpx;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:12px;
    color:#222;
    border:2rpx solid blue;
    border-radius: 10rpx;
    margin:10px;
}